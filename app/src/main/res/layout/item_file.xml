<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sidebar_button_selector"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:focusable="true"
    android:clickable="true">

    <!-- 文件图标/缩略图 -->
    <ImageView
        android:id="@+id/iv_file_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:background="#20FFFFFF"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@android:drawable/ic_menu_gallery" />

    <!-- 文件名 -->
    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/iv_file_icon"
        app:layout_constraintEnd_toStartOf="@+id/iv_selected"
        app:layout_constraintTop_toTopOf="@+id/iv_file_icon"
        tools:text="文件名.jpg" />

    <!-- 文件信息 -->
    <TextView
        android:id="@+id/tv_file_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/iv_file_icon"
        app:layout_constraintEnd_toStartOf="@+id/iv_selected"
        app:layout_constraintTop_toBottomOf="@+id/tv_file_name"
        tools:text="2.5 MB · 2024-01-15" />

    <!-- 选中状态图标 -->
    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/checkbox_off_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>